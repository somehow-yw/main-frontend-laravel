@import "../function.styl"
item-content-width()
  width calc(100% - 1.5rem)
  margin-left 0.5rem
  padding-right 1rem
.body
  overflow hidden
  .body-content
    width 100%
    height  calc(100% - 3rem)
    overflow-y auto
    overflow-scrolling touch
    -webkit-overflow-scrolling touch
  .body-footer
    width 100%
    height 3rem
    display flex
    flex-direction row-reverse
    background-color #ffffff
    align-items center
    .button
      padding 0.4rem .5rem
      margin 0 .25rem
      font-size .8rem
      display flex
      justify-content center
      align-items center
      color #666666
      border 1px solid #666666
      border-radius 5px
      &:first-child
        margin-right .75rem
      &:active
        opacity .6
.top-status
  width calc(100% - 2rem)
  padding 0.5rem 1rem
  height auto
  background-color #ffffff
  display flex
  flex-direction column
  justify-content center
  .status-item
    width 100%
    height 2rem
    display flex
    flex-direction row
    align-items center
    .status-item-left
      flex 1
      display flex
      justify-content center
      text-overflow(1)
      span
        width 100%
        font-size 1rem
    .status-item-right
      width 4rem
      height 1.5rem
      border 1px solid #999999
      display flex
      align-items center
      justify-content center
      border-radius 5px
      span
        font-size 0.8rem
        color #999999
      &:active,&:active span
        border-color #249af9
        color #249af9
.time-axis
  width 100%
  height auto
  padding-bottom 1rem
  .item
    width 100%
    height auto
    overflow hidden
    &:first-child .top
      visibility hidden
    &:last-child.real-last .bottom
      visibility hidden
    .status
      width 100%
      height 2.5rem
      display flex
      align-items center
      .status-node
        width 2rem
        height @height
        display flex
        flex-direction column
        align-items center
        position relative
        .top,.bottom
          width 1px
          flex 1
          background-color #249af9
        .mark
          width 100%
          height 100%
          position absolute
          top 0
          left 0
          display flex
          justify-content center
          align-items center
          .hollow-circle
            width 1rem
            height 1rem
            border 1px solid #249af9
            border-radius 1rem
            display flex
            justify-content center
            align-items center
            background-color #ffffff
            .solid-circle
              width 0.6rem
              height 0.6rem
              background-color #249af9
              border-radius 1rem

      .status-text
        font-size 0.9rem
        color #666
    .item-content
      width calc(100% - 1rem)
      margin-left 1rem
      border-left 1px solid #249af9
      height auto
      overflow hidden
// 商品信息
.item-content
  .goods-info
    width 100%
    margin-top .5rem
    height auto
    overflow hidden
    &:first-child
      margin-top 0
    .shop-title
      item-content-width()
      height 2rem
      background-color #ffffff
      display flex
      align-items center
      >.desc
        flex 1
        font-size 0.8rem
        margin-left 0.5rem
      >.name
        margin-left 0.5rem
        color #888888
        display flex !important
        align-items center
        flex-direction row
        >.iconfont
          font-size 1.1rem
        >.text
          font-size 0.9rem
          margin-left 0.1rem
          text-overflow(1)
    .goods-item
      item-content-width()
      height 5rem
      background-color #ffffff
      border-top 1px solid #e9e9e9
      display flex
      align-items center
      .thumb
        width 4rem
        height @height - 1
        background-color #e9e9e9
        margin 0 0.5rem
        >img
          width 100%
          height 100%
      .title
        flex 1
        height @height - 1
        font-size 0.8rem
        line-height 1rem
      .price-nums
        width 4rem
        height @height - 1
        text-align right
        .price
          width 100%
          font-size 0.8rem
        .nums
          font-size 0.8rem
          color #999
          line-height 1rem
    .statistics
      item-content-width()
      height 2rem
      background-color #ffffff
      border-top 1px solid #e9e9e9
      display flex
      align-items center
      flex-direction row-reverse
      >span
        font-size 0.8rem
        color #666666
        &.price
          color red
        &.sub
          font-size 0.7rem
// 支付方式
.item-content
  .pay-method
    item-content-width()
    height 2.5rem
    margin 0.3rem 0 0 0.5rem
    background-color #ffffff
    display flex
    align-items center
    .left,.right
      flex 1
      font-size 0.9rem
    .left
      text-indent 0.5rem
    .right
      text-align right


// 收货方式
.item-content
  .receiving-mode
    item-content-width()
    margin-top 0.3rem
    overflow hidden
    height auto
    background-color #ffffff
    .receiving-item
      width 100%
      height 2.3rem
      display flex
      align-items center
      .item-title
        width 5rem
        font-size 0.9rem
        text-indent 0.5rem
      .item-text
        flex 1
        font-size 0.9rem
        display flex
        align-items center
        flex-direction row-reverse
        padding-left 0.5rem
        >span
          flex 1
          text-align left
        >.call
          height 1.5rem
          padding 0 0.5rem
          border 1px solid #249af9
          border-radius 5px
          text-align center
          font-size 0.8rem
          margin-left 0.5rem
          display flex
          align-items center
          color #249af9
          &:active
            background-color #249af9
            color #ffffff
          >.iconfont
            padding-right 0.3rem
            font-size 0.7rem
.item-content
  .return-reason
    item-content-width()
    line-height 1.3rem
    background-color #ffffff
    font-size 0.8rem
    margin-top 0.3rem
    display flex
    flex-direction column
    >p
      color #999999
      line-height 1.2rem
      text-indent 2em
      padding 0 0.5rem 0.5rem
    >span
      line-height 2rem
      color #333333
      padding-left 0.5rem
    >.return-voucher
      width 100%
      height 3.5rem
      overflow-x auto
      overflow-scrolling touch
      -webkit-overflow-scrolling touch
      display inline
      white-space nowrap
      margin-left 0.5rem
      >.thumb
        height 3rem
        width 4rem
        margin-right 0.1rem
        background-color #e9e9e9
        overflow hidden
        display inline-block
        border-radius 5px
        >img
          width 100%
          height 100%
          border-radius 5px
