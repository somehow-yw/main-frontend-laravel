@import "../function.styl"
.body-content
  width 100%
  min-height calc(100% - 4.7rem)
  background-color transparent
  .goods
    width 100%
    height auto
    overflow hidden
    background-color transparent
    .statistics
      width calc(100% - 1rem)
      height 2rem
      display flex
      flex-direction row-reverse
      align-items center
      >span
        font-size 0.85rem
        color #222
        &.sub
          font-size 0.7rem
          color #666666
        &.price
          font-size 1rem
          color #fb3338
    .hint
      width calc(100% - 2rem)
      padding 0 1rem
      height 3rem
      background-color #ffffff
      display flex
      align-items center
      font-size 1rem
      color #444
    .goods-item
      width calc(100% - 2rem)
      padding 1rem
      height 4rem
      margin-top 1px
      background-color #ffffff
      display flex
      .thumb
        height 4rem
        width 4rem
        margin-right 1rem
        overflow hidden
        background-color #eeeeee
        >img
          width 100%
      .content
        flex 1
        height 4rem
        .name
          height 2rem
          font-size .9rem
          line-height 1rem
          text-overflow (3)
        .tags
          height 2rem
          width 100%
          .tag
            font-size .8rem
            line-height 1rem
            text-overflow (1)
            >span
              display inline-block
              font-size .8rem
              width 1rem
              height 1rem
              text-align center
              line-height 1.1rem
              border-radius 2px
              color #ffffff
      .action-box
        width 6rem
        height 4rem
        display flex
        flex-direction column
        .price
          font-size .9rem
          text-align right
          line-height 1rem
        .num
          font-size .8rem
          text-align right
          color #999999
          line-height 1rem
        .adjusted-quantity
          width 6rem
          height 1.5rem
          margin-top .5rem
          display flex
          .add-one-tenth
          .minus-one
            width 2rem
            height 1.5rem
            background-color #cccccc
            color #666
            border-radius 2px
            text-align center
            line-height 1.5rem
            font-size .8rem
            opacity 1
            &:active
              opacity .6
          .num-content
            text-align center
            width 3.5rem
            margin 0 0.25rem
            line-height 1.5rem
            font-size .7rem
            background-color #cccccc
            color #666
            border-radius 2px
            opacity 1
            &:active
              opacity .6

  .refund-amount
    width calc(100% - 2rem)
    padding 0 1rem
    background-color #ffffff
    height 3rem
    display flex
    align-items center
    margin-top .5rem
    .desc
      width 6rem
      color #666
    .input
      flex 1
      text-align right
      color red
    .unit
      height 1rem
      width 1rem
      font-size 1rem
      margin-left .5rem
      color #999999
.content
  width 100%
  .item-hint
    width calc(100% - 2rem)
    padding 0 1rem
    height 2.5rem
    font-size .9rem
    color #999999
    display flex
    align-items center
  .list
    width 100%
    height auto
    overflow hidden
    background-color #ffffff
    .item
      width calc(100% - 2rem)
      margin-left 1rem
      border-bottom 1px solid #eeeeee
      display flex
      &:last-child
        border-bottom none
      .item-title
        height 3rem
        width 5rem
        font-size 1rem
        line-height 3rem
      .item-content
        flex 1
        font-size 1rem
        height 3rem
        text-align right
        line-height 3rem
        input
          width 100%
          height @height
          font-size 1rem
          text-align right
          color #666666
      .item-content-textarea
        flex 1
        height 6rem
        display flex
        align-items center
        justify-content center
        textarea
          width calc(100% - 1rem)
          height 4rem
          padding .5rem
          background-color #eeeeee
          border-radius 5px
      .item-right-icon
        width 1.5rem
        font-size 1rem
        text-align right
        height 3rem
        line-height 3rem
        color #999999
      .item-left-icon
        width 2rem
        font-size 1.3rem
        text-align center
        display flex
        align-items center
        color #888
        height 3rem
        span.checked
          display none
          color #249af9
        span.not-checked
          display block
          color #249af9
        &.active
          span.checked
            display block
          span.not-checked
            display none
  .submit
    width calc(100% - 2rem)
    margin: 2rem 1rem
    height 3rem
    display flex
    align-items center
    justify-content center
    color #ffffff
    background-color #249af9
    border-radius 3px
    &.disabled
      background-color #cccccc
