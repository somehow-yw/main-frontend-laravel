@import "../function.styl"
.flex-box-row
  display flex
  flex-direction row
  justify-content center
  align-items center
.flex-box-column
  display flex
  flex-direction column
  justify-content center
  align-items center
.content
  width 100%
  height 100%
  display flex
  flex-direction column
  .content-head
    width @width
    height 3rem
    background-color #249af9
    display flex
    flex-direction row
    align-items center
    .left,.right
      width 4rem
      height @height
      @extend .flex-box-row
      >span
        font-size 1.1rem
        color #ffffff
    .center
      flex 1
      height @height
      @extend .flex-box-row
      >span
        font-size 1rem
        color #ffffff
  .content-body
    width @width
    flex 1
    display flex
    overflow-y auto
    overflow-x hidden
    overflow-scrolling touch
    -webkit-overflow-scrolling touch
    flex-direction column
    align-items center
    padding-bottom 1rem
    .hint
      width calc(100% - 2rem)
      height 2rem
      color #999999
      font-size 0.9rem
      line-height 2rem
    .tabs
      width 100%
      height 3rem
      background-color #ffffff
      display flex
      flex-direction row
      .tab
        flex 1
        height @height
        display flex
        justify-content center
        align-items center
        >span
          width calc(100% - 0.5rem)
          height 2.5rem
          display flex
          justify-content center
          align-items center
          border-radius 3rem
          font-size 0.9rem
          color #666666
        &.active
          >span
            background-color #249af9
            color #ffffff
    .list
      width calc(100% - 1rem)
      height auto
      padding 0 1rem
      background-color #ffffff
  .content-footer
    width @width
    height 3.5rem
    background-color #ffffff
    border-top 1px solid #dddddd
    display flex
    .pay-info
      height @height
      flex 1
      display flex
      flex-direction column
      justify-content center
      .pay-total,.desc
        width calc(100% - 1rem)
        padding-left 1rem
        display flex
        align-items center
      .pay-total
        height 1.5rem
        >span
          font-size 1rem
          line-height 1.2rem
          &.price
            color red
      .desc
        height 1.2rem
        >span
          font-size 0.8rem
          color #999999
          line-height 1rem
    .pay-button
      height @height
      width 5rem
      background-color #249af9
      display flex
      justify-content center
      align-items center
      &:active
        opacity 0.8
      >span
        font-size 1rem
        color #fff

.item
  width 100%
  height 3rem
  border-top 1px solid #e9e9e9
  display flex
  justify-content center
  align-items center
  &:first-child
    border-top none
  .item-content
    width calc(100% - 2rem)
    height @height
    display flex
    flex-direction row
    justify-content center
    .item-content-box
      flex 1
      height @height
      display flex
      align-items center
      .icon
        width 2rem
        height @height
        display flex
        align-items center
        >span
          font-size 1.2rem
          color #999999
          display block
          &.active
            display none
        &.active
          >span
            display none
            &.active
              color #1498fc
              display block
      &.child
          margin-left 2rem
      .text
        height 1.5rem
        line-height 1.5rem
        font-size 1rem
        color #333333
        flex 1
        text-overflow(1)
        >span.sub
          font-size 0.8rem
          color #1498fc
      .hint
        font-size 0.9rem
        color #999999
        width 6rem
        text-align right
        overflow hidden
        text-overflow ellipsis
        white-space normal
      .icon-right
        width 2rem
        height @height
        font-size 1.2rem
        display flex
        flex-direction row-reverse
        align-items center
        color #1498fc
.logistics-item
  width calc(100% - 1rem)
  height 4rem
  padding 0.5rem
  border-top 1px solid #e9e9e9
  display flex
  .icon
    width 2rem
    height @height
    display flex
    align-items center
    font-size 1.5rem
    color #249af9
  .content
    flex 1
    height @height
    display flex
    flex-direction column
    justify-content center
    .concat
      width 100%
      height 1.5rem
      font-size 1rem
    .address-detail
      text-overflow(2)
      font-size 0.9rem
      color #999999
      height 2rem
      line-height 1rem
  .icon-right
    width 1rem
    height @height
    display flex
    align-items center
    font-size 1rem
    color #999999

