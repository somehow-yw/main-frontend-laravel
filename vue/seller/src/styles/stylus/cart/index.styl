.body
  overflow hidden
.main-content
  width 100%
  flex 1
  overflow hidden
.flex-box-row
  display flex
  flex-direction row
  justify-content center
  align-items center
.flex-box-column
  display flex
  flex-direction column
  justify-content center
  align-items center
.cart-box
  width 100%
  height 100%
  display flex
  flex-direction column
  overflow hidden
  .cart-title
    width @width
    height 3rem
    background-color #249af9
    display flex
    flex-direction row
    align-items center
    .left,.right
      width 4rem
      height @height
      @extend .flex-box-row
      >span
        font-size 1.1rem
        color #ffffff
    .center
      flex 1
      height @height
      @extend .flex-box-row
      >span
        font-size 1rem
        color #ffffff
  .cart-content
    width 100%
    flex 1
    overflow-y auto
    overflow-scrolling touch
    -webkit-overflow-scrolling touch
    .not-product
      width 100%
      height 70%
      display flex
      flex-direction column
      align-items center
      .img
        width 210px
        height 150px
        margin-top 3rem
        img
          width 100%
          height 100%
      .not-product-desc
        width 210px
        text-align center
        font-size 1rem
        line-height 1.5rem
        color #bbbbbb
        margin-top 1rem
    .goods-list
      width 100%
      height auto
      margin-bottom 0.5rem
      background-color #ffffff
      .shop-name
        width calc(100% - 2rem)
        padding 0 1rem
        height 3.5rem
        display flex
        flex-direction row
        align-items center
        .get-all
          width 2rem
          height @height
          display flex
          align-items center
          >span
            font-size 1.2rem
            color #999999
            display block
            &.active
              display none
          &.active
            >span
              display none
              &.active
                color #1498fc
                display block
        .shop-name-text
          font-size 1.2rem
          color #333333
      .goods-item
        width calc(100% - 2rem)
        padding 0 1rem
        height 6rem
        border-top 1px solid #eeeeee
        background-color #ffffff
        display flex
        flex-direction row
        align-items center
        position relative
        .can-not-action
          position absolute
          width 100%
          height 100%
          top 0
          left 0
          background-color rgba(255,255,255,0.5)
        .select-checkbox
          height @height
          width 2rem
          display flex
          align-items center
          >span
            font-size 1.2rem
            color #999999
            display block
            &.active
              display none
          &.active
            >span
              display none
              &.active
                color #1498fc
                display block
        .thumb
          width 5rem
          height 5rem
          display flex
          justify-content center
          align-items center
          background-color #eeeeee
          margin-right 0.5rem
        .goods-data
          flex 1
          height @height - 1
          display flex
          flex-direction column
          .title
            width 100%
            height 3rem
            font-size 1rem
            line-height 1.5rem
            overflow hidden
            text-overflow ellipsis
            display -webkit-box
            -webkit-line-clamp 2
            -webkit-box-orient vertical
          .action-bar
            width 100%
            height 2rem
            display flex
            align-items center
            .price
              flex 1
              color red
              font-size 0.8rem
            .sum-total
              width 6rem
              display flex
              flex-direction row
              .left,.center,.right
                height 1.5rem
                background-color #e9e9e9
                border-radius 0.1rem
                display flex
                align-items center
                justify-content center
                color #777777
                opacity 1
                &:active
                  opacity 0.7
              .left,.right
                width 1.5rem
                font-size 1rem
              .center
                width 2.5rem
                margin 0 0.25rem
                font-size 0.6rem
                text-align center
                overflow hidden
  .cart-toolbar
    border-top 1px solid #eeeeee
    width 100%
    height 3.5rem
    background-color #ffffff
    display flex
    flex-direction row
    .cart-select-all
      width 4rem
      height @height
      margin-left 1rem
      display flex
      align-items center
      .get-all-text
        font-size 1rem
        color #666666
        margin-left 0.5rem
      >span
        font-size 1.2rem
        color #999999
        display block
        &.active
          display none
      &.active
        >span
          display none
          &.active
            color #1498fc
            display block
    .cart-toolbar-content
      flex 1
      height @height
      display flex
      flex-direction column
      justify-content center
      .add-to-collection
        width 100%
        height @height
        display flex
        flex-direction row-reverse
        >span
          width 6rem
          height @height
          font-size 1rem
          line-height @height
          text-align center
          color #1498fc
          &:active
            background-color #efefef
      .real-total
        height 2rem
        display flex
        flex-direction row-reverse
        padding-right 0.5rem
        >span
          font-size 0.9rem
          line-height 2rem
          color #333333
          overflow hidden
          &.sub
            color #999999
            font-size 0.7rem
      .total
        height 1.5rem
        display flex
        flex-direction row-reverse
        align-items center
        padding-right 0.5rem
        >span
          font-size 0.6rem
          color #666666
          overflow hidden
    .cart-go-pay
      width @height * 1.5
      height @height
      background-color #1498fc
      opacity 1
      display flex
      align-items center
      justify-content center
      &:active
        opacity 0.6
      >span
        color #ffffff
        font-size 1.2rem
