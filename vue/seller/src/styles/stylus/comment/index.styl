.comment-box
  width 100%
  height auto
  background-color #ffffff
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin-bottom 0.75rem

.goods-info
  width calc(100% - 1.5rem)
  height 6rem
  display flex
  flex-direction: row
  margin-top 0.75rem
  .thumb
    width 6.4rem
    height 5rem
    margin-right 0.75rem
    overflow hidden
    background-color #eeeeee
    border-radius 5px
    img
      width 100%
      height 100%
      border-radius 5px
  .info
    flex 1
    height 5rem
    display flex
    flex-direction column
    .title
      width 100%
      height 3.5rem
      font-size 1.2rem
      line-height 1.75rem
      color #111111
      overflow hidden
      text-overflow ellipsis
      display -webkit-box
      -webkit-line-clamp 2
      -webkit-box-orient vertical
    .price
      width 100%
      height 1.5rem
      font-size 0.8rem
      color #999999
      line-height 1.5rem
.tools
  width calc(100% - 1.5rem)
  height 1.8rem
  margin-bottom 1rem
  position relative
  >.button
    height 1.8rem
    width 3.6rem
    font-size 1rem
    color #249af9
    border-radius 5px
    border 1px solid #249af9
    text-align center
    line-height 1.8rem
    float left
    margin-right 1.2rem
    &.active,
    &:active
      color #ffffff
      background-color #249af9
.upload-picture
  width 1.8rem
  height 1.8rem
  position absolute
  right 0
  top 0
  line-height 1.8rem
  text-align center
  .iconfont
    font-size 1.5rem
    color #999999
    &:active
      color #249af9
.comment-text-area
  width calc(100% - 1.5rem)
  height 7rem
  margin-bottom 1rem
  textarea
    width calc(100% - 1rem)
    height calc(100% - 1rem)
    resize none
    padding 0.5rem
    border 1px solid #eeeeee
    font-size 1rem
    border-radius 5px
.upload-img
  width calc(100% - 1.5rem)
  .img
    width 3.84rem
    height 3rem
    float left
    margin-right 0.3rem
    background-color #eeeeee
    margin-bottom 0.75rem
    border-radius 5px
    position relative
    box-shadow 0 0 4px #cccccc
    .remove
      width 1rem
      height 1rem
      background-color #249af9
      border-radius 0.5rem
      position absolute
      right -0.2rem
      top -0.5rem
      line-height 1rem
      font-size 0.9rem
      text-align center
      color #ffffff
  img
    width 100%
    height 100%
    border-radius 5px
.submit
  width calc(100% - 1.5rem)
  height 3rem
  margin 3rem 0 0.75rem 0.75rem
  background-color #249af9
  border-radius 5px
  line-height 3rem
  text-align center
  font-size 1rem
  color #ffffff
  opacity 1
  &:active
    opacity 0.7
.notice
  width 100%
  font-size 0.8rem
  color #999999
  text-align center
  margin-bottom 1rem
.service
  width 100%
  height auto
  background-color #ffffff
  margin-top 0.75rem
.service-box
  width calc(100% - 1.5rem)
  height 2.5rem
  display flex
  flex-direction row
  margin-left 0.75rem
  .service-title
    line-height 2.5rem
    width 5rem
  .service-items
    flex 1
    height 2.5rem
    display flex
    .service-item
      flex 1
      margin-top 0.5rem
      text-align center
      height 1.5rem
      font-size 0.7rem
      line-height 1.5rem
      padding 0 0.3rem
      margin-right 0.3rem
      border 1px solid #999999
      border-radius 5px
      color #999999
      &.active,
      &:active
        color #ffffff
        border-color #249af9
        background-color #249af9
