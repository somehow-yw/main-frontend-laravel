.body
  width 100%
  height 100%
  .main-content
    width @width
    height calc(100% - 50px)
    overflow-y auto
    overflow-scrolling touch
    -webkit-overflow-scrolling touch
    transition height .1s
    &.full
      height 100% !important
.toolbar
  width 100%
  height 49px
  background-color #ffffff
  display flex
  flex-direction row
  border-top 1px solid #eeeeee
  &.full
    display none
  .item
    flex 1
    height 49px
    display flex
    flex-direction column
    justify-content center
    align-items center
    .icon
      font-size 1.3rem
      color #878787
      position relative
      .badge
        position absolute
        padding 0.15rem 0.3rem
        font-size 0.3rem
        color #ffffff
        border-radius 0.5rem
        top 0
        right -0.3rem
        background-color #fb4e44
      >span
        display block
        &.active
          display none
    .text
      margin-top 0.3rem
      font-size 12px
      color #878787
    &.active
      .icon
        color #1498fc
        >span
          display none
          &.active
            display block
      .text
        color #1498fc

