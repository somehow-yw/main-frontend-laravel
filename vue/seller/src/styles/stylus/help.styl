.body
  background-color #ffffff
  .body-content
    width calc(100% - 2rem)
    height auto
    overflow hidden
    margin-left 1rem
    background-color #ffffff
    .item
      width 100%
      padding 0.7rem 0
      border-top 1px solid #e9e9e9
      &:first-child
        border-top none
      //&:active
      //  background-color #e9e9e9
      .item-title
        width 100%
        display flex
        align-items center
        .icon
          width 2rem
          height 2rem
          background-color #e9e9e9
          >img
            width 100%
            height 100%
        .title
          flex 1
          font-size 1rem
          margin-left 1rem
        .icon-right
          font-size 1rem
          width 2rem
          text-align right
          color #999999
        .right
          display block
        .down
          display none
      .item-content
        width 100%
        height auto
        overflow hidden
        transition all .3s
        margin-top 0.5rem
        .question-item
          width 100%
          height auto
          .question
            font-size 1rem
            color #249af9
            line-height 2rem
          .answer
            font-size 0.8rem
            color #999999
            line-height 1.2rem
            padding-bottom 1rem
      &.open
        .item-title
          .right
            display none
          .down
            display block
